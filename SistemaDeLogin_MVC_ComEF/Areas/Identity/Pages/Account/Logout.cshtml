@page
@model LogoutModel
@{
    ViewData["Title"] = "to go out";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Click here to Exitr</button>
            </form> 
        }
        else
        {
            <p>You performed the Exit.</p>
        }
    }
</header>
